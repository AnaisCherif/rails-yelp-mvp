<h1 class="p-5">Add your new favorite restaurant</h1>

<div class="p-5">
<%= simple_form_for [@restaurant] do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category, as: :select, prompt: 'Choose a category', collection: ["chinese", "italian", "japanese", "french", "belgian"] %>
  <%= f.submit "Add", class: "btn btn-primary" %>
<% end %>
</div>
